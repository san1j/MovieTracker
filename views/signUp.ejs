				<label for="username">Username</label>
<!-- 				<div th:if="${#fields.hasErrors('username')}" th:errors="*{username}"
                           class="alert alert-danger"></div> -->
				 <input type="text" placeholder="Username" class="form-control" required="true">
			</div>
